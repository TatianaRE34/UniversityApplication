@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <script type="text/javascript" src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript" src="~/Scripts/RegistrationFunction.js"></script>
    <link rel="stylesheet" href="~/Content/css/Login.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Regristation</title>
</head>
<body>
    <div class="form-container">
        <div class="container-content">
            <div class="header-content">
                <h1>Register</h1>
            </div>
            <div class="message">
                <p>Register to our Service</p>
            </div>
            <div class="form-content">
                <form id="form">
                    <div class="enter-username">
                        <div class="label">
                            <label for="name">Username:</label>
                        </div>
                        <div class="input">
                            <input type="text" id="name" name="name" required>
                        </div>
                    </div>
                    <div class="enter-email">
                        <div class="label">
                            <label name="email">Enter Email:</label>
                        </div>
                        <div class="input">
                            <input type="text" id="email" name="email"  required>
                        </div>
                    </div>
                    <div class="enter-password">
                        <div class="label">
                            <label for="password">Password:</label>
                        </div>
                    </div>
                    <div class="input">
                        <input type="password" id="password" name="password" required>
                    </div>
                    <div class="confirm-password">
                        <div class="label">
                            <label for="password">Confirm Password:</label>
                        </div>
                    </div>
                    <div class="input">
                        <input type="password" id="confirm-password" name="confirm-password" required>
                    </div>
                    <div class="action">
                        <div class="btn">
                            <button type="Submit" id="register" class="register" value="register">Register</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>



